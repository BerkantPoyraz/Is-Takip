<Window x:Class="WorkTrackingWpf.ChangesPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Şifre Değiştir" WindowStartupLocation="CenterScreen" Topmost="True" Height="450" Width="450" ResizeMode="CanResizeWithGrip" SizeToContent="Height"
        KeyDown="Window_KeyDown">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Şifre Değiştir" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Eski Şifre:" FontSize="16" Margin="0,0,0,5"/>
            <PasswordBox x:Name="OldPasswordBox" Margin="0,0,0,10" FontSize="16" Height="40"/>

            <Label Content="Yeni Şifre:" FontSize="16" Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,10" FontSize="16" Height="40"/>

            <Label Content="Yeni Şifre (Tekrar):" FontSize="16" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20" FontSize="16" Height="40"/>

            <Button Content="Kaydet" HorizontalAlignment="Center" Width="150" Height="50" Background="#FF55C6F5" Foreground="Black" FontWeight="Bold" Click="ChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Window>
