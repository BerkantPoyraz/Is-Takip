<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av"
        x:Class="WorkTrackingWpf.AdminPanel"
        Title="Admin Paneli" Height="1080" Width="1920" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Window.Resources>
        <!-- Link tarzı metin stili -->
        
        <Style x:Key="LinkStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#1ABC9C"/>
                    <Setter Property="FontSize" Value="18"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#ecf0f1">
        <!-- AdminFrame: Sayfa Geçişlerinin Yönetildiği Alan -->
        <Frame x:Name="AdminFrame" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <!-- Sol Menü: Linkler -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="207" Margin="20,50,0,0">
            <TextBlock Text="Kullanıcı Ekle" Style="{StaticResource LinkStyle}" MouseLeftButtonDown="AddUserLink_Click" Height="25" FontFamily="Arial" FontWeight="Bold"/>
            <TextBlock Style="{StaticResource LinkStyle}" MouseLeftButtonDown="CreateProjectLink_Click" Height="25">
        <Run Language="tr-tr" Text="Proje Ekle" FontFamily="Arial" FontWeight="Bold"/>
        <LineBreak/><Run Language="tr-tr"/>
            </TextBlock>
            <TextBlock Style="{StaticResource LinkStyle}" MouseLeftButtonDown="CreateCompanyLink_Click" Height="25">
        <Run Language="tr-tr" Text="Firma Ekle" FontFamily="Arial" FontWeight="Bold"/>
        <LineBreak/><Run Language="tr-tr"/>
            </TextBlock>
            <TextBlock Style="{StaticResource LinkStyle}" MouseLeftButtonDown="ViewReportsLink_Click" Height="25">
             <Run Language="tr-tr" Text="Kullanıcı Rapor" FontFamily="Arial" FontWeight="Bold"/>
             <LineBreak/>
             <Run Language="tr-tr"/>
            </TextBlock>

        </StackPanel>


        <!-- İçerik Alanı: Sayfa İçeriği Burada Yüklenecek -->
        <Frame x:Name="ContentArea" Margin="227,50,20,10" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
