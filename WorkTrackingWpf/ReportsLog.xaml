<Window x:Class="WorkTrackingWpf.ReportsLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Çalışma Onay" Height="851" Width="1236" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Yıl ve Ay Seçim Alanları -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="10" Grid.Row="0">
            <Label Content="Yıl:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox x:Name="YearComboBox" HorizontalAlignment="Stretch" Margin="5" SelectionChanged="YearComboBox_SelectionChanged"/>
            <Label Content="Ay:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox x:Name="MonthComboBox" HorizontalAlignment="Stretch" Margin="5" SelectionChanged="MonthComboBox_SelectionChanged">
                <ComboBoxItem Tag="1"/>
                <ComboBoxItem Tag="2"/>
                <ComboBoxItem Tag="3"/>
                <ComboBoxItem Tag="4"/>
                <ComboBoxItem Tag="5"/>
                <ComboBoxItem Tag="6"/>
                <ComboBoxItem Tag="7"/>
                <ComboBoxItem Tag="8"/>
                <ComboBoxItem Tag="9"/>
                <ComboBoxItem Tag="10"/>
                <ComboBoxItem Tag="11"/>
                <ComboBoxItem Tag="12"/>
            </ComboBox>
            <Button Content="Filtrele" Width="100" Height="30" Margin="10,0,0,0" VerticalAlignment="Center" Click="FilterButton_Click"/>
        </StackPanel>
        <DataGrid Name="ReportsDataGrid" AutoGenerateColumns="False" Margin="10" Grid.Row="1"
          SelectionMode="Extended" HorizontalScrollBarVisibility="Auto"
          VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Gün" Binding="{Binding WorkDate}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Başlangıç Saati" Binding="{Binding WorkStartTime}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Öğlen Çıkış" Binding="{Binding LunchStartTime}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Öğlen Giriş" Binding="{Binding LunchEndTime}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Çıkış Saati" Binding="{Binding EndTime, StringFormat='{}{0:HH:mm}'}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Eksik Mesai Saati" Binding="{Binding MissingTime}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Fazla Mesai Saati" Binding="{Binding Overtime}" Width="150" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Durum">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.FilteredStatuses, RelativeSource={RelativeSource AncestorType=Window}}"
                              SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="10">
            <TextBlock Text="Toplam Net Mesai Saati: " FontWeight="Bold" VerticalAlignment="Center" Margin="20"/>
            <TextBlock x:Name="TotalNetWorkDuration" Margin="5" VerticalAlignment="Center"/>
            <Button Content="Onayla" Width="100" Height="30" Margin="5" Click="ApproveButton_Click"/>
            <Button Content="Hata Bildir" Width="100" Height="30" Margin="5" Click="ReportErrorButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
