<Window x:Class="WorkTracking.ProjectSelectionPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Project" Height="400" Width="600">
    <Grid>
        <ListBox Name="ProjectsListBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding ProjectName}" FontWeight="Bold" />
                        <TextBlock Text="{Binding Task}" />
                        <TextBlock Text="{Binding StartTime, StringFormat='Start: {0}'}" />
                        <TextBlock Text="{Binding EndTime, StringFormat='End: {0}'}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
