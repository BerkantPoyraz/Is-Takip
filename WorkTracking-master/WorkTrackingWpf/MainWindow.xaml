<Window x:Class="WorkTrackingWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="1080" Width="1920" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <!-- Arka Plan -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#2C3E50" Offset="0"/>
                <GradientStop Color="#4CA1AF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Ana Düzen -->
        <Grid>
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Logo için -->
                <RowDefinition Height="*"/>
                <!-- Giriş Paneli için -->
            </Grid.RowDefinitions>

            <!-- Logo -->
            <Image Source="C:\Users\MD\Desktop\WorkTracking/vem.jpg" Height="165" Margin="0,185,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Width="324">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="/vem.jpg"/>
                </Image.OpacityMask>
            </Image>

            <!-- Merkezi Giriş Paneli -->
            <Border Grid.Row="1" CornerRadius="10" Background="White" Width="400" Height="300" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="Black" Opacity="0.5"/>
                </Border.Effect>
                <Grid Margin="20">
                    <!-- Başlık -->
                    <TextBlock Text="Giriş Yap" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,20"/>

                    <!-- Kullanıcı Adı Alanı -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                        <Label Content="Kullanıcı Adı:" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,5,0,5"/>
                        <TextBox x:Name="UserNameTextBox" Height="30" Padding="5" BorderBrush="#2C3E50" BorderThickness="1" Background="#ECF0F1" Margin="0,0,0,10" KeyDown="UserNameTextBox_KeyDown"/>

                        <!-- Şifre Alanı -->
                        <Label Content="Şifre:" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,5,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Height="30" Padding="5" BorderBrush="#2C3E50" BorderThickness="1" Background="#ECF0F1" Margin="0,0,0,20" KeyDown="PasswordBox_KeyDown"/>

                        <!-- Giriş ve Çıkış Butonları -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button x:Name="LoginButton" Content="Giriş Yap" Width="120" Height="35" Background="#4CA1AF" Foreground="White" FontWeight="Bold" Margin="5,0" Click="LoginButton_Click_1"/>
                            <Button x:Name="CloseButton" Content="Çıkış Yap" Width="120" Height="35" Background="#E74C3C" Foreground="White" FontWeight="Bold" Margin="5,0" Click="CloseButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Hata Mesajı -->
                    <TextBlock x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="12" Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
